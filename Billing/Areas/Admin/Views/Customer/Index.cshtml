@model BusinessObjectLayer.CommonModels.CustomerModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Customer List</h3>
            </div>
             <div class="row">
                 <div class="box-body">
                     <div class="col-lg-12">
                         <table class="table table-bordered table-hover table-responsive">
                             <thead>
                                 <tr>
                                     <td><b>Customer Id</b></td>
                                     <td><b>Customer Name</b></td>
                                     <td><b>Mobile</b></td>
                                     <td><b>Email</b></td>
                                     <td><b>Date of Birth</b></td>
                                     <td>Edit</td>
                                     <td>Delete</td>
                                 </tr>
                             </thead>
                             <tbody>
                                 @foreach (var item in Model.CustomerList)
            {
                                     <tr>
                                         <td>@item.ID</td>
                                         <td>@item.CustomerName</td>
                                         <td>@item.Mobile</td>
                                         <td>@item.Email</td>
                                         <td>@item.DOB</td>

                                         <td>
                                             <button value="Edit"
                                                     class="btn btn-info btn-sm" type="button" id="addressSearch"
                                                     onclick="location.href='@Url.Action("Create", "Customer" ,new {id = item.ID })'">
                                                 Edit
                                             </button>
                                         </td>
                                         <td>
                                             <button value="Edit"
                                                     class="btn btn-info btn-sm" type="button" id="addressSearch"
                                                     onclick="location.href='@Url.Action("Create", "Customer" ,new {id = item.ID })'">
                                                 Delete
                                             </button>
                                         </td>
                                         @*<td>@Html.ActionLink("Delete", "Delete", "Category", new { id = item.CategoryId })</td>*@


                                     </tr>
                                 }
                             </tbody>
                         </table>
                     </div>
                 </div>
             </div>
        </div>
    </div>
</div>